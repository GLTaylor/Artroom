<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="card-form">
        <div class="form-title">
          <h2>Change your password</h2>
        </div>
        <div class="form-container">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password,
                          label: "New password",
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" , class: "form-line", placeholder: "Password"}, label: false %>
              <%= f.input :password_confirmation, required: true, input_html: {
                class: "form-line", placeholder: "Password confirmation"
              } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Change my password", class: "login-button" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>

