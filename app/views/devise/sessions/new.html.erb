<div class="session-viewheight">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="card-form">
          <div class="form-title">
            <h2>Log in</h2>
          </div>
          <div class="form-container">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "form-line", placeholder: "name@example.com" }, label: false %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class: "form-line", placeholder: "Password" }, label: false %>
                  <div class="pretty p-default p-curve p-thick input-margin">
                  <%= f.input_field :remember_me, as: :boolean if devise_mapping.rememberable?  %>
                  <div class="state p-primary-o label-gray">
                    <label for="user_remember_me">Remember me</label>
                  </div>
                </div>


              <div class="form-actions">
                <%= f.button :submit, "Log in",class: "login-button" %>
              </div>
            <% end %>
          </div>

          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
