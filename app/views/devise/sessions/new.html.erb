<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="card-form">
        <div class="login-title">
          <h2>Log in</h2>
        </div>
        <div class="form-container">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-line", placeholder: "name@example.com" }, label: false %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-line", placeholder: "Password" }, label: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>


            <div class="form-actions">
              <%= f.button :submit, "Log in",class: "button-small" %>
            </div>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
