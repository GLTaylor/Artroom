<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1&appId=847384205471698&autoLogAppEvents=1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="vertical-wrapper-room-white">
  <div class="container">
    <div class="row">
      <div class="room-options">
      <% if @user == current_user %>
        <h1 class="room-title">My room</h1>
      <% else %>
        <h1 class="room-title"><%= @user.user_name %>'s Room</h1>
      <% end %>
        <div class="button-options">
              <div class="share button-small button-pink button-margin text-center">
                <span><p>SHARE</p></span>
                <nav>
                  <div class="link-icons">
                 <p><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.artroom.fun%2Fusers%2F10&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore" data-href="http://www.artroom.fun/users/current_user.id" data-layout="button_count" data-size="small" data-mobile-iframe="true"><i class="fa fa-facebook share-icons"></i></a></p>
               </div>
                 <div class="link-icons">
                 <p><a href="https://twitter.com/share?ref_src=twsrc%5Etfw" data-show-count="false"><i class="fa fa-twitter share-icons"></i></a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script></p>
                  </div>
               </nav>
             </div>
       </div>
     </div>
    </div>
    <div class="row">
      <div class="art-container">
        <% @user.hangings.each do |hanging| %>
          <div class="image-container image-rounded artblock" style="position: absolute; top: <%= hanging.top.to_s %>%; left: <%= hanging.left.to_s %>%; width: <%= hanging.width.to_s %>%" data-hangingid ="<%= hanging.id %>">
            <div class="art-image-hover">
              <%= cl_image_tag hanging.artwork.image, class: "art-image"%>
              <div class="artwork-hover">
                <div class="artwork-link">
                  <ul>
                    <li>
                       <p class="button-artwork"><%= link_to "More details", artwork_path(hanging.artwork), class: "button-small button-gray" %></p>
                    </li>
                    <li>
                      <p class="button"> <%= link_to "Delete", hanging_path(hanging), method: :delete, class: "button-small button-gray"  %></p>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

